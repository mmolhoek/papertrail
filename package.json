{
  "name": "papertrail",
  "version": "1.0.0",
  "description": "GPS tracker with e-paper display for Raspberry Pi 5",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc && tsc-alias",
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only -r tsconfig-paths/register src/index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "gps",
    "raspberry-pi",
    "e-paper",
    "gpx"
  ],
  "author": "Mischa Molhoek",
  "license": "MIT",
  "dependencies": {
    "@types/qrcode": "^1.5.6",
    "bmp-js": "^0.1.0",
    "dotenv": "^17.2.3",
    "express": "^4.18.2",
    "lgpio": "^1.0.6",
    "multer": "^2.0.2",
    "qrcode": "^1.5.4",
    "serialport": "^12.0.0",
    "sharp": "^0.34.5",
    "socket.io": "^4.6.1",
    "winston": "^3.18.3",
    "xml2js": "^0.6.2"
  },
  "devDependencies": {
    "@serialport/parser-readline": "^12.0.0",
    "@types/bmp-js": "^0.1.2",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/multer": "^2.0.0",
    "@types/node": "^20.10.6",
    "@types/sharp": "^0.31.1",
    "@types/xml2js": "^0.4.14",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.1",
    "socket.io-client": "^4.6.1",
    "ts-jest": "^29.1.1",
    "ts-node-dev": "^2.0.0",
    "tsc-alias": "^1.8.16",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.3"
  }
}
